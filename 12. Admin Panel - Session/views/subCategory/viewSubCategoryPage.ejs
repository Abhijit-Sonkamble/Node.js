<%- include('../header')%>
    <div class="container-fluid py-4">

        <div class="card shadow border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-bordered align-middle mb-0">
                        <thead class="table-dark text-center">
                            <tr>
                                <th style="width:70px">No</th>
                                <th class="text-start ps-4" style="width:260px">Category Name</th>
                                <th class="text-start ps-4" style="width:260px">SubCategory Name</th>
                                <th style="width:140px">Image</th>
                                <th style="width:220px">Action</th>
                            </tr>
                        </thead>
                        <tbody class="border-top">
                            <% allSubcategory.forEach((row, index)=> { %>
                                <tr class="text-center">
                                    <td class="fw-semibold text-secondary">
                                        <%= index + 1 %>
                                    </td>

                                    <td class="text-start ps-4 fw-semibold text-dark text-truncate"
                                        style="max-width:260px;font-size:15px;letter-spacing:0.3px">
                                        <%= row.category_id.category_name %>
                                    </td>

                                    <td class="text-start ps-4 fw-semibold text-dark text-truncate"
                                        style="max-width:260px;font-size:15px;letter-spacing:0.3px">
                                        <%= row.SubCategory_name %>
                                    </td>
                                    <td>
                                        <img src="/<%= row.category_id.category_image %>"
                                            style="width:80px;height:80px;object-fit:cover;border-radius:10px;border:1px solid #e5e5e5;padding:2px;background:#fff"
                                            onerror="this.src='/uploads/default-avatar.png'">
                                    </td>

                                    <td>
                                        <div class="d-flex justify-content-center align-items-center" style="gap:14px">
                                            <a href="/category/editCategory/<%= row._id %>"
                                                class="btn btn-primary btn-sm px-3 py-2">
                                                <i class="fas fa-edit me-1"></i> Edit
                                            </a>

                                            <a href="/category/deleteCategory/<%= row._id %>"
                                                class="btn btn-danger btn-sm px-3 py-2"
                                                onclick="return confirm('Delete this category?')">
                                                <i class="fas fa-trash me-1"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <%- include('../footer')%>