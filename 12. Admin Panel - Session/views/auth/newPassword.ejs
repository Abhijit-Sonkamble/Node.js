<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Reset Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #4e73df;
            height: 100vh;
            display: flex;
            align-items: center;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card p-4 border-0 shadow">
                    <h4 class="text-center">Set New Password</h4>
                    <form action="/change-new-password" method="POST">
                        <div class="form-group">
                            <input type="password" name="new_password" class="form-control" placeholder="New Password"
                                required>
                        </div>
                        <div class="form-group">
                            <input type="password" name="confirm_password" class="form-control"
                                placeholder="Confirm Password" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Update Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.26.18/dist/sweetalert2.all.min.js"></script>


    <script>

        if (<%= locals.flash.success !== "" && locals.flash.success.length > 0 %>) {
            Swal.fire({
                title: "Success...!",
                text: "<%= locals.flash.success %>",
                icon: "success"
            });
        }
        if (<%= locals.flash.error !== "" && locals.flash.error.length > 0 %>) {
            Swal.fire({
                title: "Error..!",
                text: "<%= locals.flash.error %>",
                icon: "error"
            });
        }
    </script>
</body>

</html>