<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>

<body>
    <h1>Home</h1>

    <table align="center" border="1">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Action</th>
        </tr>
        <%user.map((user, index)=> {%>
            <tr>
                <td>
                    <%= user.id%>
                </td>
                <td>
                    <%= user.name%>
                </td>
                <td>
                    <%= user.phone%>
                </td>
                <td>
                    <button><a href="/deleteuser?userid=<%= user.id %>">Delete</a></button>
                    <button>Edit</button>
                </td>
            </tr>
            <% })%>
    </table>
<button><a href="/adduserinfo">Add User</a></button>
</body>

</html>