<%- include('header')%>
    <style>
        /* Button Hover Effect */
        .btn-gradient {
            background: linear-gradient(45deg, #4e73df, #224abe);
            color: white;
            transition: all 0.3s ease;
            /* Smooth transition */
            border: none;
            cursor: pointer;
        }

        .btn-gradient:hover {
            background: linear-gradient(45deg, #224abe, #4e73df);
            transform: translateY(-2px);
            /* Hover par halka sa upar uthega */
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3) !important;
            color: white;
        }

        /* File Input Focus Effect */
        .custom-file-input:focus~.custom-file-label {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }
    </style>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card custom-card">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <h1 class="h3 text-gray-900 font-weight-bold">Register New Admin</h1>
                            <p class="text-muted">Fill in the details to create a new administrator account</p>
                        </div>

                        <form action="/insertAdmin" method="POST" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-sm-6 mb-3">
                                    <label class="small font-weight-bold">First Name</label>
                                    <input type="text" class="form-control form-control-custom" placeholder="John"
                                        name="fname" required>
                                </div>
                                <div class="col-sm-6 mb-3">
                                    <label class="small font-weight-bold">Last Name</label>
                                    <input type="text" class="form-control form-control-custom" placeholder="Doe"
                                        name="lname" required>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label class="small font-weight-bold">Email Address</label>
                                <input type="email" class="form-control form-control-custom"
                                    placeholder="email@example.com" name="email" required>
                            </div>

                            <div class="form-group mb-3">
                                <label class="small font-weight-bold">Password</label>
                                <input type="password" class="form-control form-control-custom" placeholder="Password"
                                    name="password" required>
                            </div>

                            <div class="form-group mb-3">
                                <label class="small font-weight-bold">Phone Number</label>
                                <input type="number" class="form-control form-control-custom" name="phone">
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="label-title d-block">Gender</label>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" id="m" value="Male">
                                        <label class="form-check-label" for="m">Male</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" id="f"
                                            value="Female">
                                        <label class="form-check-label" for="f">Female</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="label-title d-block">City</label>
                                    <select class="form-control form-control-custom" name="city">
                                        <option value="">Select City</option>
                                        <option value="Surat">Surat</option>
                                        <option value="Pune">Pune</option>
                                        <option value="Mumbai">Mumbai</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                <label class="label-title">Profile Image</label>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="profile_image" id="pic"
                                        accept="image/*">
                                    <label class="custom-file-label" for="pic" id="file-label">Choose photo...</label>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-gradient btn-block shadow-sm">Create Admin
                                Account</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // File input change hone par label update karne ke liye
        document.getElementById('pic').addEventListener('change', function (e) {
            // Agar file select hui hai toh uska naam nikalenge
            if (this.files && this.files.length > 0) {
                var fileName = this.files[0].name;
                var label = document.getElementById('file-label');
                label.innerText = fileName; // Label ka text file name se badal jayega
                label.style.color = "#4e73df"; // Text color change (optional confirmation)
            }
        });
    </script>

    <%- include('footer')%>